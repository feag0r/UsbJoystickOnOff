<Window x:Name="USB_Joystick_On_Off" x:Class="UsbJoystickOnOff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsbJoystickOnOff"
        mc:Ignorable="d"
        Title="USB Joystick On/Off" Height="165" Width="608" MinWidth="608" MinHeight="165">
    <Grid>
        <Label Content="Guid" HorizontalAlignment="Left" Margin="13,12,0,84" Width="107"/>
        <TextBox x:Name="GuidTextbox" Height="23" Margin="125,15,15,0" TextWrapping="Wrap" Text="Enter GUID" VerticalAlignment="Top"/>
        <Label Content="Instance path" HorizontalAlignment="Left" Margin="13,55,0,36" Width="107"/>
        <TextBox x:Name="InstanceTextbox" Height="23" Margin="125,58,15,0" TextWrapping="Wrap" Text="Enter instance path" VerticalAlignment="Top"/>
        <Button Content="On/Off" Margin="0,0,15,10" Click="Button_Click" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
    </Grid>
</Window>
